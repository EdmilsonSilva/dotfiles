function sourcefile(){
	source $1
	echo "sourced '$1' file"
}
function editandsource(){
	vim $1
	sourcefile $1
}
alias esfile="editandsource"
function salias(){
	sourcefile ~/.bashaliasrc
}

function ebash(){
	editandsource ~/.bashrc
}
function evim(){
	vim ~/.vimrc
}
function sbash(){
	sourcefile ~/.bashrc
}

function ealias(){
	editandsource ~/.bashaliasrc
}

